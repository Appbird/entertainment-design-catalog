{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eda-experiments.local/schemas/umap-index.schema.json",
  "title": "UMAP Point Index",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["point_id", "feature_id", "paper_id", "feature_idx", "mode"],
    "additionalProperties": false,
    "properties": {
      "point_id": {
        "type": "string",
        "pattern": "^.+::(title|abstract)$"
      },
      "feature_id": {
        "type": "string",
        "pattern": "^.+::[0-9]+$"
      },
      "paper_id": { "type": "string" },
      "feature_idx": {
        "type": "integer",
        "minimum": 0
      },
      "mode": {
        "type": "string",
        "enum": ["title", "abstract"]
      }
    }
  }
}
